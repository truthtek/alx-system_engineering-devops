#!/bin/bash

# Install nginx if not already installed
apt-get update
apt-get install -y nginx

# Create a custom 404 page
cat <<EOF > /usr/share/nginx/html/404.html
<!DOCTYPE html>
<html>
<head>
    <title>404 Not Found</title>
</head>
<body>
    <h1>404 Not Found</h1>
    <p>Ceci n'est pas une page</p>
</body>
</html>
EOF

# Configure Nginx to use the custom 404 page
sed -i '/error_page 404/c\        error_page 404 /404.html;' /etc/nginx/sites-available/default

# Test Nginx configuration and reload to apply changes
nginx -t && systemctl reload nginx

echo "Custom 404 page configured successfully"
