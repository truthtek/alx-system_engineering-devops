#!/bin/bash

# Use pgrep to find PIDs of processes with the specified name
pids=$(pgrep -f bash)

# Display header
echo "PID   PROCESS NAME"

# Loop through the PIDs and display information
for pid in $pids; do
    # Get the process name
    process_name=$(ps -p $pid -o comm=)

    # Display PID and process name
    echo "$pid    $process_name"
done
