#!/usr/bin/env bash
# Displays information about subdomains for a given domain

# Function to retrieve and format subdomain information
get_subdomain_info() {
    local domain="$1"
    local subdomain="$2"
    local dig_output
    local record_type
    local destination

    dig_output=$(dig "$subdomain.$domain" +short)
    record_type=$(echo "$dig_output" | awk 'NR==1 {print $4}')
    destination=$(echo "$dig_output" | awk 'NR==1 {print $5}')

    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Check if domain parameter is provided
if [ -z "$1" ]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

domain="$1"

# If no subdomain is provided, display information for default subdomains
if [ -z "$2" ]; then
    for subdomain in www lb-01 web-01 web-02; do
        get_subdomain_info "$domain" "$subdomain"
    done
else
    subdomain="$2"
    get_subdomain_info "$domain" "$subdomain"
fi
